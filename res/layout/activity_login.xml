<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondo"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_logo2" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_card"
                android:ems="10"
                android:hint="Nombre de Usuario"
                android:inputType="textEmailAddress"
                android:textColor="#fff"
                android:textColorHint="#fff" >
            </EditText>

            <EditText
                android:id="@+id/editTextContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/editTextEmail"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_card"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:textColorHint="#fff" >
            </EditText>
            
             <TextView
                android:id="@+id/textViewOlvido1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/editTextContra"
                android:layout_below="@+id/editTextContra"
                android:layout_marginTop="10dp"
                android:text="He olvidado mi contraseña"
                android:textColor="#fff" />

            <Button
                android:id="@+id/buttonEntrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextContra"
                android:layout_alignRight="@+id/editTextContra"
                android:layout_below="@+id/textViewOlvido1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_card_orange"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Ingresar"
                android:textColor="#ee5124" />
            
            <TextView
                android:id="@+id/textViewOlvido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonEntrar"
                android:layout_marginTop="10dp"
                android:text="¿Nuevo usuario?"
                android:layout_centerHorizontal="true"
                android:textColor="#fff" />

            <Button
                android:id="@+id/buttonNuevo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonEntrar"
                android:layout_alignRight="@+id/buttonEntrar"
                android:layout_below="@+id/textViewOlvido"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_card"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Regístrate"
                android:textColor="#fff" />

           
        </RelativeLayout>
    </ScrollView>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/img_footer" />

</RelativeLayout>