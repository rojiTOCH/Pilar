<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23b3ae"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#23b3ae" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_perf" />

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo" 
                android:layout_marginTop="20dip"
                android:layout_marginBottom="25dip">

                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true" 
                    android:gravity="center_horizontal"
                    android:text="VOCES VITALES"
                    android:textColor="#FFFFFF"
                    android:textSize="24dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative1"
                android:background="#018d87"
                android:paddingBottom="25dip" >

                <TextView
                    android:id="@+id/txtDescripcion1"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Es una organización internacional, que cuenta con presencia en El Salvador y apoya
                    mediante talleres de emprendimiento e innovación para la generación y desarrollo íntegro de negocios 
                    innovadores liderados por mujeres"
                    android:textColor="#FFFFFF"
                    android:textSize="16dip" />
                <TextView
                    android:id="@+id/txtDescripcion2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/txtDescripcion1"
                    android:text="Contacto: 2219-6530"
                    android:textColor="#FFFFFF"
                    android:textSize="18dip" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>