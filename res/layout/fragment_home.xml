<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_fondo" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="220dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_home" />

       <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/img_footer" />

       <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/imageView1"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:textColor="#fff"
           android:textStyle="bold"
           android:textSize="30dp"
           android:gravity="center"
           android:text="Â¡Bienvenido!" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/textView1"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="5dp"
           android:textColor="#fff"
           android:textSize="20dp"
           android:gravity="center"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:text="Encuentra el servicio que buscas en la primera red de negocios para mujeres emprendedoras de Zaragoza." />
        
    </RelativeLayout>
